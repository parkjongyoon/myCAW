<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="com.tsp.caw.user.dao.UserMapper">
 
    <select id="readUser" resultType="com.tsp.caw.user.dto.UserDTO" parameterType="String">
        select * 
          from admin_user
         where user_id = #{userId}
    </select>
    
    <insert id="createUser" parameterType="com.tsp.caw.user.dto.UserDTO">
    INSERT INTO admin_user
    		(user_id, user_pwd, user_name)
    		VALUES
    		(#{user_id}, #{user_pwd}, #{user_name})
    </insert>
</mapper>